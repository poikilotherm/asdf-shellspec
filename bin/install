#!/usr/bin/env bash

set -e
set -o pipefail

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version  }
TMPDIR=${TMPDIR:-/tmp}
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_shellspec() {
	#local install_type="$1"
	local version="$2"
  local install_path="$3"
  local bin_install_path="$install_path/bin"
  local bin_path="${bin_install_path}/shellspec"

  local tmp_path
  tmp_path="$(mktemp -d)"
	local download_url
  download_url=$(get_download_url "$version")

	mkdir -p "${bin_install_path}"
	echo "Downloading and extracting ShellSpec from ${download_url}"
	curl -sS -L "$download_url" | tar -xz -C "$tmp_path"
  mv "$tmp_path"/shellspec/* "$bin_install_path"
	chmod +x "$bin_path"
	rm -rf "$tmp_path"
}

# get_arch() {
#   uname | tr '[:upper:]' '[:lower:]'
# }

get_download_url() {
	local version="$1"
	echo "https://github.com/shellspec/shellspec/releases/download/${version}/shellspec-dist.tar.gz"
}

install_shellspec "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
